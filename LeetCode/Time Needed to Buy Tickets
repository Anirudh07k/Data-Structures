int timeRequiredToBuy(int* tickets, int ticketsSize, int k)
{
    int counter = 0;
    while(1)
    {
    for(int i=0;i<ticketsSize;i++)
    {
        if(tickets[i] != 0)
        {
            tickets[i] -= 1;
            counter++;
        }
        if(tickets[k] == 0)
        return counter;
    }
    }
    return counter;
}
